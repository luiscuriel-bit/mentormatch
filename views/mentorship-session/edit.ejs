<!DOCTYPE html>
<html lang="en">

<%- include("../partials/head.ejs") %>

    <body>

        <%- include("../partials/navbar.ejs") %>

        <div class="container mt-5">
            <h1>Edit Session: <%= session.subject %></h1>

            <form action="/session/<%= session._id %>?_method=put" method="post">
                <div class="mb-3">
                    <label for="subject" class="form-label">Subject</label>
                    <input type="text" name="subject" id="subject" class="form-control" value="<%= session.subject %>" required>
                </div>

                <div class="mb-3">
                    <label for="date" class="form-label">Date</label>
                    <input type="date" name="date" id="date" class="form-control" value="<%= session.date.toLocaleDateString('en-US') %>" disabled>
                </div>

                <div class="mb-3">
                    <label for="time" class="form-label">Time</label>
                    <select name="time" id="time" class="form-select" disabled>
                        <option value="15:30" <%= session.time === '15:30' ? 'selected' : '' %>>3:30 PM</option>
                        <option value="17:30" <%= session.time === '17:30' ? 'selected' : '' %>>5:30 PM</option>
                        <option value="19:30" <%= session.time === '19:30' ? 'selected' : '' %>>7:30 PM</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label for="resources" class="form-label">Add Resources (optional)</label>
                    <textarea name="resources" id="resources" class="form-control" rows="5"><%= session.resources %></textarea>
                </div>

                <button type="submit" class="btn btn-primary">Update Session</button>
            </form>
        </div>
    </body>

</html>