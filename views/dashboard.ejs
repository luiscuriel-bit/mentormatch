<!DOCTYPE html>
<html lang="en">

<%- include("partials/head.ejs") %>

    <body>
        <%- include("partials/navbar.ejs") %>

        <h1 class="text-center">Dashboard</h1>
        <div class="container my-5 text-center">
            <div class="row my-4">
                <div class="col-md-6 mb-4 ">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h3 class="card-title">Profile</h3>
                            <p class="card-text"><%= user.name %></p>
                            <a href="/user/<%= user._id %>" class="btn btn-primary">View Profile</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 mb-4 ">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h3 class="card-title">Sessions</h3>
                            <p class="card-text">View all your sessions</p>
                            <a href="/session" class="btn btn-primary">View Sessions</a>
                        </div>
                    </div>
                </div>
            </div>

            <h3>Upcoming Sessions</h3>
            <div class="my-4">
                <% if (upcomingSessions.length > 0) { %>
                    <div class="row my-4">
                        <% upcomingSessions.forEach(session => { %>
                            <div class="col-md-4 mb-4">
                                <div class="card h-100 shadow-sm">
                                    <div class="card-body">
                                        <h2 class="card-title">
                                            <%= session.subject %>
                                        </h2>
                                        <p class="card-text">
                                            with
                                            <%= user.role === "student" ? session.mentor.name : session.student.name %>
                                            on <%= session.formattedDate %> at <%= session.formattedTime %>
                                        </p>
                                        <a href="/session/<%= session._id %>" class="btn btn-info btn-sm float-end">
                                            View Session
                                        </a>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                <% } else { %>
                    <p>No upcoming sessions.</p>
                <% } %>
            </div>
        </div>
    </body>

</html>