<!DOCTYPE html>
<html lang="en">

<%- include("../partials/head.ejs") %>

    <body>

        <%- include("../partials/navbar.ejs") %>

        <h1>Mentorship sessions</h1>
            <ul>
              <% formattedSessions.forEach((session)=>{ %>
                <a href="/session/<%= session._id %>">
                  <li>
                    <%= `Session with ${user.role === "student" ? session.mentor.name : session.student.name}` %>
                  </li>
                </a>
                <p><%= `Meeting on ${session.formattedDate} at ${session.formattedTime}` %></p>
              <% }); %>
            </ul>
          </div>
    </body>

</html>